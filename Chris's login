@app.route('/login', methods=['GET', 'POST'])
def login():
    db = get_db()
    db.row_factory = make_dicts
    current_username = request.form['username']
    current_ps = request.form['password']
    #request.authorization.username
    #pwCheck = db.execute("SELECT password FROM Users WHERE username = :current_username", {"current_username": current_username}).fetchone()

    sql_ps = query_db('select password from Users where username=? AND password=?', [current_username,current_ps], one=True)
    db.close()
    print(current_ps)
    print(current_username)
    if (sql_ps != None):
        if current_ps == sql_ps['password']:
            return 'Password Verified!' #这里改成home.html的page
    else:
        return 'Username/Password is/are wrong!'
